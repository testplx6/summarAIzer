{
  "manifest_version": 3,
  "name": "promptAIzer",
  "version": "1.0",
  "description": "A context menu extension using OpenAI's GPT API for text processing, summarizing, explaining, problem-solving, and customization.",
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}