{
  "manifest_version": 3,
  "name": "Résumeur de Texte",
  "version": "1.0",
  "description": "Résumer le texte sélectionné en utilisant GPT-4.",
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
